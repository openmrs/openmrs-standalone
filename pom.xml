						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>openmrs-standalone</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptorRefs>
								<descriptorRef>jar-with-dependencies</descriptorRef>
							</descriptorRefs>
							<archive>
								<manifest>
									<mainClass>org.openmrs.standalone.Bootstrap</mainClass>
								</manifest>
							</archive>
						</configuration>
