<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.openmrs</groupId>
    <artifactId>referenceapplication-standalone-02</artifactId>
    <version>2.6.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>referenceapplication-standalone-02</name>

    <parent>
        <groupId>org.openmrs</groupId>
        <artifactId>referenceapplication-standalone</artifactId>
        <version>2.6.0-SNAPSHOT</version>
        <relativePath>pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>ch.vorburger.mariaDB4j</groupId>
                <artifactId>mariaDB4j-maven-plugin</artifactId>
                <configuration>
                    <port>33328</port>
                    <baseDir>${project.build.directory}/demodatabase</baseDir>
                    <dataDir>${project.build.directory}/demodatabase/data</dataDir>
                </configuration>

                <executions>
                    <execution>
                        <id>start-demo-database</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop-demo-database</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>${liquibase.plugin.artifactId}</artifactId>
                <executions>
                    <execution>
                        <id>demo-database-create-schema</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <driver>com.mysql.cj.jdbc.Driver</driver>
                            <changeLogFile>liquibase-schema-only.xml</changeLogFile>
                            <url><![CDATA[jdbc:mysql://127.0.0.1:33328/openmrs?autoReconnect=true&useUnicode=true&characterEncoding=UTF-8]]></url>
                            <username>openmrs</username>
                            <password>test</password>
                            <verbose>true</verbose>
                            <dropFirst>false</dropFirst>
                            <systemProperties>
                                <property>
                                    <name>liquibase.databaseChangeLogTableName</name>
                                    <value>liquibasechangelog</value>
                                </property>
                                <property>
                                    <name>liquibase.databaseChangeLogLockTableName</name>
                                    <value>liquibasechangeloglock</value>
                                </property>
                            </systemProperties>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>demo-database-add-core-data</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <driver>com.mysql.cj.jdbc.Driver</driver>
                            <changeLogFile>liquibase-core-data.xml</changeLogFile>
                            <url><![CDATA[jdbc:mysql://127.0.0.1:33328/openmrs?autoReconnect=true&useUnicode=true&characterEncoding=UTF-8]]></url>
                            <username>openmrs</username>
                            <password>test</password>
                            <verbose>true</verbose>
                            <dropFirst>false</dropFirst>
                            <systemProperties>
                                <property>
                                    <name>liquibase.databaseChangeLogTableName</name>
                                    <value>liquibasechangelog</value>
                                </property>
                                <property>
                                    <name>liquibase.databaseChangeLogLockTableName</name>
                                    <value>liquibasechangeloglock</value>
                                </property>
                            </systemProperties>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>demo-database-add-demo-data</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <driver>com.mysql.cj.jdbc.Driver</driver>
                            <changeLogFile>src/main/db/liquibase-demo-data.xml</changeLogFile>
                            <url><![CDATA[jdbc:mysql://127.0.0.1:33328/openmrs?autoReconnect=true&useUnicode=true&characterEncoding=UTF-8]]></url>
                            <username>openmrs</username>
                            <password>test</password>
                            <verbose>true</verbose>
                            <dropFirst>false</dropFirst>
                            <systemProperties>
                                <property>
                                    <name>liquibase.databaseChangeLogTableName</name>
                                    <value>liquibasechangelog</value>
                                </property>
                                <property>
                                    <name>liquibase.databaseChangeLogLockTableName</name>
                                    <value>liquibasechangeloglock</value>
                                </property>
                            </systemProperties>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>demo-database-update-to-latest</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <driver>com.mysql.cj.jdbc.Driver</driver>
                            <changeLogFile>liquibase-update-to-latest.xml</changeLogFile>
                            <url><![CDATA[jdbc:mysql://127.0.0.1:33328/openmrs?autoReconnect=true&useUnicode=true&characterEncoding=UTF-8]]></url>
                            <username>openmrs</username>
                            <password>test</password>
                            <verbose>true</verbose>
                            <dropFirst>false</dropFirst>
                            <systemProperties>
                                <property>
                                    <name>liquibase.databaseChangeLogTableName</name>
                                    <value>liquibasechangelog</value>
                                </property>
                                <property>
                                    <name>liquibase.databaseChangeLogLockTableName</name>
                                    <value>liquibasechangeloglock</value>
                                </property>
                            </systemProperties>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>demo-database-add-standalone-data</id>
                        <phase>generate-resources</phase>
                        <configuration>
                            <driver>com.mysql.cj.jdbc.Driver</driver>
                            <changeLogFile>src/main/db/liquibase-standalone-data.xml</changeLogFile>
                            <url><![CDATA[jdbc:mysql://127.0.0.1:33328/openmrs?autoReconnect=true&useUnicode=true&characterEncoding=UTF-8]]></url>
                            <username>openmrs</username>
                            <password>test</password>
                            <verbose>true</verbose>
                            <dropFirst>false</dropFirst>
                            <systemProperties>
                                <property>
                                    <name>liquibase.databaseChangeLogTableName</name>
                                    <value>liquibasechangelog</value>
                                </property>
                                <property>
                                    <name>liquibase.databaseChangeLogLockTableName</name>
                                    <value>liquibasechangeloglock</value>
                                </property>
                            </systemProperties>
                        </configuration>
                        <goals>
                            <goal>update</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-jar-with-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>openmrs-standalone</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>true</attach> 
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <archive>
                                <manifest>
                                    <mainClass>org.openmrs.standalone.Bootstrap</mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>zip-demo-database</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>demodatabase</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <descriptors>
                                <descriptor>src/main/assembly/zip-demo-database.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>zip-empty-database</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>emptydatabase</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <attach>false</attach>
                            <descriptors>
                                <descriptor>src/main/assembly/zip-empty-database.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>zip-standalone</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>referenceapplication-standalone-${refapp.version}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/main/assembly/zip-standalone.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.liquibase</groupId>
                    <artifactId>${liquibase.plugin.artifactId}</artifactId>
                    <version>${liquibase.plugin.version}</version>
                    <dependencies>
                        <dependency>
                            <groupId>org.openmrs.api</groupId>
                            <artifactId>openmrs-api</artifactId>
                            <version>${openmrs.version}</version>
                            <type>jar</type>
                        </dependency>
                        <dependency>
                            <groupId>mysql</groupId>
                            <artifactId>mysql-connector-java</artifactId>
                            <version>8.0.30</version>
                            <scope>compile</scope>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>